-    unsigned Hi1 = (Value >> 11) & 0x1;
-    unsigned Mid6 = (Value >> 5) & 0x3f;
-    unsigned Lo4 = (Value >> 1) & 0xf;
-    // Inst{31} = Sbit;
-    // Inst{30-25} = Mid6;
-    // Inst{11-8} = Lo4;
-    // Inst{7} = Hi1;
